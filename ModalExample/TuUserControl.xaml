<UserControl x:Class="ModalExample.TuUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModalExample"
             mc:Ignorable="d" 
             Background="Red"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <!-- Puedes agregar otros controles y personalizar según tus necesidades -->
        <Border Background="Red" CornerRadius="10" Padding="10">
            <StackPanel>
                <!-- Agrega aquí los elementos de tu modal -->
                <TextBlock Text="Contenido del modal" />
                <Button Content="Cerrar" Height="30"
                        Click="CerrarModal_Click" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
